<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- Database Driver Register Here -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>

		<!-- Database URL Here -->
		<property name="connection.url">jdbc:mysql://localhost:3306/hibernatedb</property>

		<!-- Database MySQL User name -->
		<property name="connection.username">root</property>

		<!-- Database MySQL User name -->
		<property name="connection.insecureAuth">false</property>

		<!-- Database MySQL User Password -->
		<property name="connection.password">manish</property>

		<!-- Hibernate Properties -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">update</property>

		<!-- Mapping resource -->
		<mapping class="com.manish.javadev.model.Student" />

	</session-factory>
</hibernate-configuration>